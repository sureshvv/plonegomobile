<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="mobipublic.content">
<body>

<metal:main fill-slot="content-core">
  <metal:content-core define-macro="content-core">

    <div class="link-data">

            <a tal:attributes="href context/remoteUrl" tal:content="context/title">             
	       <img tal:condition="view/hasImage" tal:attributes="href string:${context/absolute_url}/@@download/screenshot/${screenshot/filename}" />
	    </a>
	     
	    <h1>
		    <a tal:attributes="href context/remoteUrl" tal:content="context/title">	    	
		    </a>
	    </h1>    
	    
	    <p class="documentDescription" tal:content="content/description" />

            <div style="clear: both"><!-- --></div>
    </div>
    
    <div tal:replace="structure context/socialbar" />
    
  </metal:content-core>
</metal:main>

</body>
</html>

