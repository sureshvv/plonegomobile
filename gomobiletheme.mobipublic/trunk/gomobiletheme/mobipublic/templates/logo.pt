<div id="logo" i18n:domain="gomobiletheme.basic">
  
  <a tal:attributes="href string:${viewlet/portal_url}" alt="Home" i18n:attributes="alt">
    <img tal:attributes="src string:${viewlet/logo_url}; 
         alt context/@@plone_portal_state/portal_title" 
         />
  </a>
      
</div>

<div id="socialmedia-logos">
	<a href="http://www.facebook.com/"><img width="46" height="46" tal:attributes="src string:${context/portal_url}/++resource++gomobiletheme.mobipublic/twitter-logo.png" alt="Twitter" /></a>
	<a href="http://www.twitter.com/"><img width="46" height="46" tal:attributes="src string:${context/portal_url}/++resource++gomobiletheme.mobipublic/facebook-logo.png" alt="Facebook" /></a>
</div>
<div class="slogan">Your doorway to mobile internet&hellip; <br /> 
News, event deals/discounts and other exciting stuff!</div>

<div style="clear: both"><!-- --></div>

<ul class="main-menu">
	<li tal:repeat="section viewlet/getSections">
	        <a tal:condition="python:section != None" tal:attributes="href section/absolute_url">
	                <span tal:content="section/Title" />
	        </a>
	</li>
</ul>
