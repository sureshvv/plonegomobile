<ul id="portal-globalnav" tal:condition="python:len(viewlet.portal_tabs) > 0" i18n:domain="gomobiletheme.basic">

    <tal:tabs tal:repeat="tab viewlet/portal_tabs">
        <li tal:attributes="id string:portaltab-${tab/id};">
            <a href=""
               tal:content="tab/name"
               tal:attributes="href tab/url;
                           title tab/description|nothing">
                <tal:comment replace="nothing">Tab Name</tal:comment>
            </a>
            |
        </li>
    </tal:tabs>

    <li>
        <a tal:attributes="href string:${viewlet/portal_url}/search" i18n:translate="">
            Search
        </a>
        |
    </li>

    <li>
        <a tal:attributes="href string:${viewlet/portal_url}/contact-info" i18n:translate="">
            Feedback
        </a>
    </li>

</ul>
