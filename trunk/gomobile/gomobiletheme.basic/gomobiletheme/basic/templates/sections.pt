<ul id="portal-sections" tal:condition="python:len(viewlet.sections) > 0" i18n:domain="gomobiletheme.basic">

    <tal:tabs tal:repeat="sec viewlet/sections">
        <li tal:attributes="id string:portaltab-${sec/id};">
            <a href=""
               tal:content="sec/title"
               tal:attributes="href sec/url;
                           title sec/description|nothing">
                <tal:comment replace="nothing">Tab Name</tal:comment>
            </a>
        </li>
    </tal:tabs>

</ul>
