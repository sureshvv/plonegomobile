<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

	<metal:main fill-slot="main">
	    <tal:main-macro metal:define-macro="main"
	           tal:define="context context/@@multichannel_overrider|nocall:context; here nocall:context;
	           			   templateId template/getId;
	                       text here/getText">


	        <h1 class="documentFirstHeading" tal:content="context/Title" />

	        <p class="documentDescription" tal:content="context/Description" />

                <tal:rewriteimg define="helper context/@@mobile_image_html_rewriter; text python: helper.processHTML(context.getText())">
	               <div tal:replace="structure text" />
	        </tal:rewriteimg>

	        <div metal:use-macro="here/document_relateditems/macros/relatedItems">
	            show related items if they exist
	        </div>

	    </tal:main-macro>
	</metal:main>

</body>
</html>

